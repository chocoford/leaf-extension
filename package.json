{
    "name": "leaf",
    "displayName": "vapor-leaf",
    "description": "vapor-leaf syntax highlighting",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.44.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "leaf",
            "aliases": ["leaf", "Leaf"],
            "extensions": [".leaf"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "leaf",
            "scopeName": "source.leaf",
            "path": "./syntaxes/leaf.tmLanguage.json"
        }],
        "snippets": [
			{
				"language": "leaf",
				"path": "./snippets/snippets.json"
			},
            {
                "language": "leaf",
                "path": "./snippets/snippets_html.json"
            }
		]
    }
}